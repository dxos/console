    "eslint": "^7.10.0",
    "eslint-plugin-react": "^7.27.0",
    "jest": "^27.1.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "typescript": "^4.5.2",
    "@types/debug": "~4.1.7",
    "@types/react": "^17.0.22",
    "@types/react-dom": "^17.0.9",
    "@babel/core": "^7.0.0"
