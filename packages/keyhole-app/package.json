    "@emotion/styled": "^11.3.0",
    "@mui/material": "^5.0.0",
    "@mui/styles": "^5.0.0",
    "debug": "^4.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-resize-aware": "^3.1.1",
    "superagent": "^6.1.0"
